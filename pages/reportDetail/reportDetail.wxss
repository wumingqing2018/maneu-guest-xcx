/* pages/report/report.wxss */

.table {
  margin: 5%;
  height: 100%;
  display: flex;
  flex-direction: column;     /* 排列形式: 向下 */
}

.tr {
  display: flex;
  flex-direction: row;
  height: 40px;
}
.tr1 {
  display: flex;
  flex-direction: row;
  height: 20px;
  border-bottom: 1px solid #003153;
}

.td0 {
  flex-wrap: wrap;            /* 自动换行 */
  width: 100%;					/* 4个25%相加刚好100% */
  text-align: left;         /* 文本居中 */
  justify-content:center;     /* 主轴居中 */
  align-items: center;        /* 交叉轴居中 */
  color: #003153;

}
.td1 {  /* 公有的属性 */
  flex-wrap: wrap;            /* 自动换行 */
  width: 30%;					/* 4个25%相加刚好100% */
  text-align: right;         /* 文本居中 */
  justify-content:center;     /* 主轴居中 */
  align-items: center;        /* 交叉轴居中 */
  color: #003153;
}
.td2 {
  flex-wrap: wrap;            /* 自动换行 */
  width: 60%;					/* 4个25%相加刚好100% */
  text-align: left;         /* 文本居中 */
  justify-content:center;     /* 主轴居中 */
  align-items: center;        /* 交叉轴居中 */
  color: #003153;
}
.td3 {
  width: 30%;					/* 4个25%相加刚好100% */
  text-align: right;         /* 文本居中 */
  justify-content:center;     /* 主轴居中 */
  align-items: center;        /* 交叉轴居中 */
  color: #003153;
}

.text0 {
  margin-left: 2%;
  margin-right: 4%;
}
.text2{
  font-size: 20px;
  color: #FFC048;
}

.echarts{
  width: 100%;
  height: 800rpx;
}
ec-canvas{
  width: 100%;
  height: 100%;
}
