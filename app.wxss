.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.table {
  margin: 5%;
  height: 100%;
  display: flex;
  flex-direction: column;     /* 排列形式: 向下 */
}